<div class="container">
    <div class="row">
        {{#each news}}
        <div class="col-6">
            <div class="card" style="width: 18rem;">
            <img src="{{this.image}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.detail}}</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>